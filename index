        <?php
        // Generiere die Tiernamen mit Hilfe eines While-schleife.
        $mammals = array("Rind", "Pferd", "Ziege","Mensch");
        $i = 0;
        $length = count($mammals);//sizeof is ein alias für Count
        while ($i < $length) {
          $m = $mammals[$i];
          //Ich könnte folgendes verwenden
          //echo '<option value="'.$m.'">'.$m.'</option>';
          //Es ist aber kürzer und einfacher im String Template Format
          //mit Double-Quotes. Preis: Ich muss innerhalb der "" mit Single Quotes arbeiten.
          echo "<option value='$m'>$m</option>";
          $i = $i + 1; // Kurzform $i++
        }
        ?>
        </div>
</select>
